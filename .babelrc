{
    "env": {
        "test": {
            "presets": [
                "@babel/preset-react",
                ["@babel/preset-env", {
                    "modules": "commonjs",
                    "targets": {
                        "browsers": [">0.25%", "ie >= 11", "not ie < 11"]
                    },
                    "useBuiltIns": false,
                    "exclude": ["transform-regenerator", "transform-async-to-generator"]
                }]
            ],
            "plugins": [
                // enable class properties in loose mode to match private-methods
                ["@babel/plugin-proposal-class-properties", { "loose": true }],
                "@babel/plugin-proposal-object-rest-spread",
                "@babel/plugin-proposal-optional-chaining",
                // enable new syntax in tests
                "@babel/plugin-syntax-dynamic-import",
                "@babel/plugin-proposal-nullish-coalescing-operator",
                ["@babel/plugin-proposal-logical-assignment-operators", { "loose": true }],
                "@babel/plugin-proposal-optional-catch-binding",
                "@babel/plugin-proposal-numeric-separator",
                // private methods and fields must match private-property-in-object
                ["@babel/plugin-proposal-private-methods", { "loose": true }],
                ["@babel/plugin-proposal-private-property-in-object", { "loose": true }],
                "@babel/plugin-syntax-bigint",
                ["istanbul", {
                    "exclude": [
                        "**/Modal/**",
                        "**/js/components/Consonant/Testing/**",
                        "**/app.jsx",
                        "**/ConsonantPageDOM.jsx",
                        "**/polyfills.js",
                        "**/watch.js",
                        "**/js/components/Consonant/Helpers/TestingConstants/**",
                        "**/__tests__/**",
                        "**/__test__/**",
                        "**/enzyme.config.js",
                        "**/*.config.js"
                    ]
                }]
            ]
        },
        "production": {
            "plugins": [
                ["transform-react-remove-prop-types", {
                    "ignoreFilenames": ["node_modules"]
                }]
            ]
        }
    },
  "plugins": [
    // enable class properties in loose mode to match private-methods
    ["@babel/plugin-proposal-class-properties", { "loose": true }],
    "@babel/plugin-proposal-object-rest-spread",
    "@babel/plugin-proposal-optional-chaining",
    // nullish coalescing (??)
    "@babel/plugin-proposal-nullish-coalescing-operator",
    // logical assignment (&&=, ||=, ??=)
    ["@babel/plugin-proposal-logical-assignment-operators", { "loose": true }],
    // optional catch binding
    "@babel/plugin-proposal-optional-catch-binding",
    // numeric separators (1_000_000)
    "@babel/plugin-proposal-numeric-separator",
    // private methods and fields (must pair with private-property-in-object)
    ["@babel/plugin-proposal-private-methods", { "loose": true }],
    ["@babel/plugin-proposal-private-property-in-object", { "loose": true }],
    // big integer syntax
    "@babel/plugin-syntax-bigint"
  ],
    "presets": [
        ["@babel/preset-env", {
            "modules": false,
            "targets": {
                "browsers": [">0.25%", "ie >= 11", "not ie < 11"]
            },
            "useBuiltIns": false,
            "exclude": ["transform-regenerator", "transform-async-to-generator"]
        }],
        "@babel/preset-react"
    ]
}